<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>送信一覧</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/custom.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body class="leading-normal tracking-normal text-white gradient" style="font-family: 'Source Sans Pro', sans-serif;" cz-shortcut-listen="true">
    <input type="hidden" id="send_workflows" value=<%= JSON.stringify(send_workflows)%>>
    <%- include('../components/_header')  %>
    <a href="/workflow">戻る</a>
    <p>送信一覧</p>
    <ul id="send_ls" class="flex flex-col"></ul>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const send_workflows = JSON.parse(document.getElementById('send_workflows').value);
        send_workflows.forEach(workflow => {
          let status_text;
          workflow.is_complete ===1 ? status_text = "完了" : status_text = "まだ";
          $('#send_ls').append(`<li><a href="/send_confirm/${workflow.id}">ワークフローid: ${workflow.id} 申請フォーム名: ${workflow.name} KPI: ${status_text}</a></li>`)
        });
      })
    </script>
  </body>
</html>